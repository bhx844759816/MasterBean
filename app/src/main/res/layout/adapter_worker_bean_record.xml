<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    >
    <TextView
        android:id="@+id/id_worker_bean_record_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="@dimen/sp_16"
        tools:text="点赞"
        android:text="点赞"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/worker_bean_record_text_color"
        />
    <TextView
        android:id="@+id/id_worker_bean_record_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_worker_bean_record_title"
        android:textSize="@dimen/sp_14"
        tools:text="2015-2-23"
        android:text="2015-2-23"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:textColor="@color/worker_bean_record_text_color"
        />
    <TextView
        android:id="@+id/id_worker_bean_record_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/id_worker_bean_record_title"
        app:layout_constraintBottom_toTopOf="@id/id_worker_bean_record_time"
        android:textSize="@dimen/sp_14"
        tools:text="100"
        android:text="100"
        android:layout_marginEnd="10dp"
        android:textColor="@color/worker_bean_record_text_color"
        />

</android.support.constraint.ConstraintLayout>

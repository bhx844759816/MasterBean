<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:background="@color/white"
                android:minHeight="80dp"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:text="我的匠豆:"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/sp_16" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="1800"
                    android:textColor="@color/text_default"
                    android:textSize="@dimen/sp_18" />

            </android.support.v7.widget.CardView>

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="15dp">

                <RadioButton
                    android:id="@+id/id_worker_bean_level_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:checked="true"
                    android:gravity="center"
                    android:text="匠豆等级"
                    android:textColor="@color/color_search_item_text_color"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/id_worker_bean_record_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="匠豆记录"
                    android:textColor="@color/color_search_item_text_color"
                    android:textSize="@dimen/sp_14" />

                <RadioButton
                    android:id="@+id/id_worker_bean_rank_rb"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:button="@null"
                    android:gravity="center"
                    android:text="匠豆排行"
                    android:textColor="@color/color_search_item_text_color"
                    android:textSize="@dimen/sp_14" />
            </RadioGroup>

            <FrameLayout
                android:id="@+id/id_worker_bean_fragment"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="11"></FrameLayout>
        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</android.support.constraint.ConstraintLayout>

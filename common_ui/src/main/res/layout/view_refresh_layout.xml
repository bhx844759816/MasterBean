<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">

        <ImageView
            android:id="@+id/id_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_ui_icon_arrow_down_2"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/id_refresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/common_ui_icon_refresh"
            android:visibility="gone" />

        <TextView
            android:id="@+id/id_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="下拉刷新"
            android:textColor="@color/refresh_text_color"
            android:textSize="@dimen/model_ui_refresh_text_size" />
    </LinearLayout>
</RelativeLayout>

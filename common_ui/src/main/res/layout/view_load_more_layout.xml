<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center">


        <ProgressBar
            android:id="@+id/id_load_progressBar"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_horizontal"
            android:indeterminateBehavior="repeat"
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/common_ui_loading_dialog_anim"
            android:indeterminateOnly="true" />

        <TextView
            android:id="@+id/id_load_refresh_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:text="上拉加载"
            android:textColor="@color/refresh_text_color"
            android:textSize="@dimen/model_ui_refresh_text_size" />
    </LinearLayout>
</RelativeLayout>
